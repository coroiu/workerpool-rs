{
  "name": "wasm-workers",
  "version": "0.0.1",
  "description": "Multi-threaded WebAssembly workers playground",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd web && npm install",
    "sdk:clean": "rimraf sdk/dist",
    "sdk:build": "cd sdk/crates/wasm && wasm-pack build --target web --scope sdk --out-dir ../../dist/pkg",
    "sdk:build:watch": "chokidar 'sdk/**/*.(rs|js)' -c 'npm run sdk:build'",
    "web:start": "cd web && npm run start",
    "prestart": "npm run sdk:clean && npm run sdk:build",
    "start": "run-p sdk:build:watch web:start"
  },
  "author": "Andreas Coroiu (@coroiu)",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "chokidar-cli": "^3.0.0",
    "npm-run-all2": "^6.2.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2",
    "wasm-pack": "^0.13.0"
  }
}
